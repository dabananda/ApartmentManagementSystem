@model IEnumerable<ApartmentManagementSystem.Models.Flat>

@{
    ViewData["Title"] = "Flats";
}

<div class="d-flex justify-content-between align-content-center mb-4">
    <h2 class="mb-0"><strong>Flats in @ViewData["BuildingName"]</strong></h2>
    <a asp-action="Create" asp-route-buildingId="@ViewData["BuildingId"]" class="btn btn-dark">
        <i class="fa-solid fa-plus"></i>
        Add New Flat
    </a>
</div>

<table class="table" id="flatsTable">
    <thead>
        <tr>
            <th>Flat No.</th>
            <th>Owner</th>
            <th>Status</th>
            <th>Tenant(s)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FlatNumber)</td>
                <td>
                    @if (item.Owner != null)
                    {
                        @Html.DisplayFor(modelItem => item.Owner.Fullname)
                    }
                    else
                    {
                        <span class="text-muted">Not Assigned</span>
                    }
                </td>
                <td>
                    @if (item.IsOccupied)
                    {
                        <span class="badge bg-success">Occupied</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Vacant</span>
                    }
                </td>
                <td>
                    @if (item.Tenants != null && item.Tenants.Any())
                    {
                        @foreach (var tenant in item.Tenants.Where(t => t.IsActive))
                        {
                            <span class="badge bg-info me-1">@tenant.Fullname</span>
                        }
                        @if (!item.Tenants.Any(t => t.IsActive))
                        {
                            <span class="text-muted">No Active Tenants</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No Tenants</span>
                    }
                </td>
                <td>
                    @if (item.Owner == null)
                    {
                        <a asp-action="AssignOwner" asp-route-flatId="@item.Id" class="btn btn-sm btn-success">Assign Owner</a>
                    }
                    else
                    {
                        <a asp-controller="Tenant" asp-action="ViewTenants" asp-route-flatId="@item.Id" class="btn btn-sm btn-info">View Tenants</a>
                        <a asp-controller="Tenant" asp-action="Create" asp-route-flatId="@item.Id" class="btn btn-sm btn-primary">Add Tenant</a>
                    }
                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('@item.Id', '@item.FlatNumber')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4>Are you sure you want to delete <strong id="flatNumberText"></strong>?</h4>
                <p class="text-danger"><small><strong><em>This action cannot be undone.</em></strong></small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap4.min.css">

    <!-- DataTables JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#flatsTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "paging": true,
                "pageLength": 25,
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
                "columnDefs": [
                    {
                        "targets": [4], // Actions column (updated index)
                        "orderable": false,
                        "searchable": false
                    }
                ],
                "order": [[0, "asc"]], // Sort by Flat Number
                "language": {
                    "search": "Search:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    }
                }
            });
        });

        // Delete confirmation function
        function confirmDelete(flatId, flatNumber) {
            // Set the flat number in the modal
            document.getElementById('flatNumberText').textContent = 'Flat ' + flatNumber;

            // Set the form action with the flat ID and building ID
            var deleteForm = document.getElementById('deleteForm');
            deleteForm.action = '@Url.Action("Delete", "Flat")' + '/' + flatId + '?buildingId=@ViewData["BuildingId"]';

            // Show the modal
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}