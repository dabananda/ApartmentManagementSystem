@model ApartmentManagementSystem.ViewModels.AssignOwnerViewModel

@{
    ViewData["Title"] = "Assign Owner";
}

<h1>Assign Owner</h1>

<h4>Flat: @ViewData["FlatNumber"] (@ViewData["BuildingName"])</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignOwner">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="FlatId" />

            <div class="form-group">
                <label asp-for="OwnerId" class="control-label">Select Owner</label>
                <select asp-for="OwnerId" class="form-control" asp-items="@Model.Owners"></select>
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-buildingId="@Model.FlatId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}