@{
    ViewData["Title"] = "Assign President";
}

<h1>Assign President</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignPresident">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="buildingId" class="control-label">Select Building</label>
                <select id="buildingId" name="buildingId" class="form-control" asp-items="@ViewData["Buildings"] as SelectList"></select>
            </div>
            <div class="form-group">
                <label for="userId" class="control-label">Select President</label>
                <select id="userId" name="userId" class="form-control" asp-items="@ViewData["Owners"] as SelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>