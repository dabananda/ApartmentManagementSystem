@model ApartmentManagementSystem.ViewModels.AssignPresidentViewModel

@{
    ViewData["Title"] = "Assign President";
}

<div class="container">
    <div class="form-container shadow">
        <h1>Assign a Building President</h1>
        <p>Select a building and an owner to assign them as the building's president.</p>
        <hr class="divider" />
        <form asp-action="AssignPresident">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            <div class="form-field">
                <label asp-for="BuildingId">Building</label>
                <select asp-for="BuildingId" asp-items="ViewBag.Buildings">
                    <option value="">-- Select a Building --</option>
                </select>
                <span asp-validation-for="BuildingId" class="validation-message"></span>
            </div>
            <div class="form-field">
                <label asp-for="UserId">Owner</label>
                <select asp-for="UserId" asp-items="ViewBag.Owners">
                    <option value="">-- Select an Owner --</option>
                </select>
                <span asp-validation-for="UserId" class="validation-message"></span>
            </div>
            <div class="button-group">
                <button type="submit" class="submit-button">
                    ASSIGN
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width: 1rem; height: 1rem; margin-left: 0.5rem;">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="shadow btn btn-outline-dark">
        <i class="fa-solid fa-arrow-left"></i>
        Back to List
    </a>
</div>

<link href="~/css/assign-president.css" rel="stylesheet" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}