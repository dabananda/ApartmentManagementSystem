@model IEnumerable<ApartmentManagementSystem.Models.Building>

@{
    ViewData["Title"] = "Buildings";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-dark mb-0">🏢 Buildings</h1>
        <a asp-action="Create" class="btn btn-primary rounded-pill shadow px-4">
            <i class="bi bi-plus-lg me-1"></i> Add Building
        </a>
    </div>

    <!-- Buildings Grid -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-lg-4 col-xl-3">
                    <div class="card h-100 border-0 modern-card shadow">
                        <div class="card-body d-flex flex-column">
                            <!-- Card Header -->
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="fw-semibold text-dark mb-0">@item.Name</h5>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light rounded-circle shadow-sm" type="button"
                                            id="dropdownMenuButton-@item.Id"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm"
                                        aria-labelledby="dropdownMenuButton-@item.Id">
                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Flat" asp-action="Create" asp-route-buildingId="@item.Id">Add Flats</a></li>
                                        <li><a class="dropdown-item" asp-controller="CommonBill" asp-action="Index" asp-route-buildingId="@item.Id">Manage Bills</a></li>
                                        <li><a class="dropdown-item" asp-controller="ExpensePayment" asp-action="Index" asp-route-buildingId="@item.Id">Manage Payments</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Address -->
                            <p class="text-muted small mb-4">
                                <i class="bi bi-geo-alt me-1"></i> @item.Address
                            </p>

                            <!-- Footer Actions -->
                            <div class="mt-auto d-flex justify-content-between">
                                <a asp-controller="Flat" asp-action="Index" asp-route-buildingId="@item.Id"
                                   class="btn btn-outline-primary btn-sm rounded-pill px-3 modern-btn">
                                    <i class="bi bi-door-open me-1"></i> Flats
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-outline-dark btn-sm rounded-pill px-3 modern-btn">
                                    <i class="bi bi-info-circle me-1"></i> Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="col-12">
                <div class="text-center py-5 border rounded-3 bg-light shadow-sm">
                    <i class="bi bi-building text-secondary" style="font-size:3rem;"></i>
                    <h5 class="mt-3 text-muted">No buildings found</h5>
                    <p class="text-muted small">Click below to get started by adding your first building.</p>
                    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 mt-2">
                        <i class="bi bi-plus-lg me-1"></i> Add Building
                    </a>
                </div>
            </div>
        }
    </div>
</div>