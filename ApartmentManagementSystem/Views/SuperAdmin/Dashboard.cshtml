@model ApartmentManagementSystem.ViewModels.SuperAdminDashboardViewModel
@{
    ViewData["Title"] = "SuperAdmin Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">SuperAdmin Dashboard</h1>
        <div class="btn-group" role="group">
            <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Create User
            </a>
            <a asp-controller="Building" asp-action="Create" class="btn btn-success">
                <i class="fas fa-building"></i> Add Building
            </a>
            @* <a asp-controller="Admin" asp-action="ApproveOwners" class="btn btn-warning">
                <i class="fas fa-user-check"></i> Approve Users (@Model.PendingApprovals)
            </a> *@
        </div>
    </div>

    <!-- Overview Cards Row -->
    <div class="row mb-4">
        <!-- Buildings Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Buildings</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalBuildings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                            <small class="text-muted">Presidents: @Model.TotalPresidents | Owners: @Model.TotalOwners</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Flats Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Flats</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalFlats</div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h6 mb-0 mr-3 font-weight-bold text-gray-800">
                                        @(Math.Round((decimal)Model.OccupiedFlats / Math.Max(Model.TotalFlats, 1) * 100, 1))% Occupied
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-info" role="progressbar"
                                             style="width: @(Math.Round((decimal)Model.OccupiedFlats / Math.Max(Model.TotalFlats, 1) * 100, 1))%"
                                             aria-valuenow="@Model.OccupiedFlats" aria-valuemin="0" aria-valuemax="@Model.TotalFlats"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-home fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Financial Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Financial Balance</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OverallBalance.ToString("C")</div>
                            <small class="text-muted">Collected: @Model.TotalAmountCollected.ToString("C")</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Buildings Overview Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Buildings Overview</h6>
                    <a asp-controller="Building" asp-action="Index" class="btn btn-sm btn-primary">View All Buildings</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Building Name</th>
                                    <th>Address</th>
                                    <th>Total Flats</th>
                                    <th>Occupied</th>
                                    <th>Vacant</th>
                                    <th>Total Bills</th>
                                    <th>Total Payments</th>
                                    <th>Balance</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var building in Model.BuildingsSummary)
                                {
                                    <tr>
                                        <td>@building.Name</td>
                                        <td>@building.Address</td>
                                        <td>@building.TotalFlats</td>
                                        <td><span class="badge badge-success">@building.OccupiedFlats</span></td>
                                        <td><span class="badge badge-secondary">@building.VacantFlats</span></td>
                                        <td>@building.TotalBills.ToString("C")</td>
                                        <td>@building.TotalPayments.ToString("C")</td>
                                        <td class="@(building.Balance >= 0 ? "text-success" : "text-danger")">
                                            @building.Balance.ToString("C")
                                        </td>
                                        <td>
                                            <a asp-controller="Building" asp-action="Details" asp-route-id="@building.Id"
                                               class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-controller="Flat" asp-action="Index" asp-route-buildingId="@building.Id"
                                               class="btn btn-sm btn-secondary">
                                                <i class="bi bi-houses"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Overview and Recent Activities Row -->
    <div class="row">
        <!-- Financial Overview -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Financial Overview</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">Bills Generated</div>
                                    <div class="h6 mb-0">@Model.TotalBillsGenerated.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">Amount Collected</div>
                                    <div class="h6 mb-0">@Model.TotalAmountCollected.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">Payments Made</div>
                                    <div class="h6 mb-0">@Model.TotalPaymentsMade.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card @(Model.TotalPendingCollection > 0 ? "bg-warning" : "bg-secondary") text-white">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">Pending Collection</div>
                                    <div class="h6 mb-0">@Model.TotalPendingCollection.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activities -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Activities</h6>
                </div>
                <div class="card-body">
                    <h6 class="text-primary">Recent Bills</h6>
                    <div class="list-group list-group-flush mb-3">
                        @if (Model.RecentBills.Any())
                        {
                            @foreach (var bill in Model.RecentBills)
                            {
                                <div class="list-group-item list-group-item-action flex-column align-items-start">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@bill.Name</h6>
                                        <small>@bill.BillDate.ToString("MMM dd")</small>
                                    </div>
                                    <p class="mb-1">@(bill.Building?.Name ?? "Unknown Building")</p>
                                    <small class="text-success font-weight-bold">@bill.TotalAmount.ToString("C")</small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item">
                                <small class="text-muted">No recent bills</small>
                            </div>
                        }
                    </div>

                    <h6 class="text-primary">Recent Payments</h6>
                    <div class="list-group list-group-flush">
                        @if (Model.RecentPayments.Any())
                        {
                            @foreach (var payment in Model.RecentPayments)
                            {
                                <div class="list-group-item list-group-item-action flex-column align-items-start">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@payment.Name</h6>
                                        <small>@payment.PaymentDate.ToString("MMM dd")</small>
                                    </div>
                                    <p class="mb-1">@(payment.Building?.Name ?? "Unknown Building")</p>
                                    <small class="text-primary font-weight-bold">@payment.Amount.ToString("C")</small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item">
                                <small class="text-muted">No recent payments</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">System Summary</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-2">
                            <div class="mb-3">
                                <div class="h4 text-primary">@Model.FlatsWithOwners</div>
                                <small class="text-muted">Flats with Owners</small>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <div class="h4 text-warning">@Model.FlatsWithoutOwners</div>
                                <small class="text-muted">Unassigned Flats</small>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <div class="h4 text-info">@Model.OccupiedFlats</div>
                                <small class="text-muted">Occupied Flats</small>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <div class="h4 text-secondary">@Model.VacantFlats</div>
                                <small class="text-muted">Vacant Flats</small>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <div class="h4 text-success">@Model.TotalPresidents</div>
                                <small class="text-muted">Presidents</small>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <div class="h4 @(Model.PendingApprovals > 0 ? "text-danger" : "text-success")">@Model.PendingApprovals</div>
                                <small class="text-muted">Pending Approvals</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: .25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: .25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: .25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: .25rem solid #f6c23e !important;
    }

    .progress-sm {
        height: 0.5rem;
    }

    .card-body {
        flex: 1 1 auto;
        padding: 1.25rem;
    }

    .text-gray-300 {
        color: #dddfeb !important;
    }

    .text-gray-800 {
        color: #5a5c69 !important;
    }
</style>